@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = 3px
  $margin-tiny = 6px
  $margin-small = 14px
  $margin-basic = 20px
  $margin-mid = 30px
  $margin-large = 40px

  $font-size-basic = 14px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(96%, $gutter, m)

  font-sizes($font-size-basic)

  p
    margin-bottom: $margin-basic

  .mobile-only
    display: none !important


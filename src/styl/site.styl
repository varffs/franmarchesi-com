@import '~kouto-swiss/index.styl'
@import '~globie-styl-library/helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()


// ******************************************************

// GRID

@import '~globie-styl-library/grid'

// ******************************************************

// FONTS
@import 'fonts/fonts'

$font-sans = font-stack('ConduitITC')
$font-serif = font-stack('Siena')

// ******************************************************


// TYPOGRAPHY

@import '~globie-styl-library/type'

$font-size-larger = 1.3rem

$font-leading-basic = 1.2
$font-leading-tighter = 1.1
$font-leading-larger = 1.35

$font-tracking-basic = .001em
$font-tracking-wider = .05em

html
  font-family: $font-serif
  font-weight: 200
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

.font-sans
  font-family: $font-sans
  font-weight: bold

.font-serif
  font-family: $font-serif
  font-weight: 200

.font-larger
  font-size: $font-size-larger

.font-italic
  font-style: italic

.line-tighter
  line-height: $font-leading-tighter

.line-larger
  line-height: $font-leading-larger

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-peach = rgb(255,	219,	213)
$color-red = rgb(255, 62, 76)

.text-color-red
  color: $color-red

// ******************************************************

// BASIC

html
  color: $color-black
  background-color: $color-peach

img
  height: auto
  max-width: 100%

.mobile-only
  display: initial !important

.desktop-only
  display: none !important

.home-item
  display: flex
  align-items: center
  justify-content: center
  box-shadow: 1px 0 0 0 $color-red, 0 1px 0 0 $color-red, 1px 1px 0 0 $color-red, 1px 0 0 0 $color-red inset, 0 1px 0 0 $color-red inset

.home-item-content
  padding: 2.5rem

hr
  overflow: visible /* For IE */
  padding: 0
  border: none
  border-top: 1px solid $color-red
  color: $color-red

// ******************************************************

// TYPOGRAPHY

// .font-size-big-copy

// ******************************************************

// MEDIA QUERIES

@import 'responsive/mobile'

@import 'responsive/tablet-portrait'

@import 'responsive/tablet-landscape'

@import 'responsive/laptop'

@import 'responsive/desktop'

@import 'responsive/hd'

@media screen and (min-width: 1920px)

  grid-maker(1800px)
